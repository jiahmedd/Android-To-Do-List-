<!-- res/drawable/circle_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#69EA6E" /> <!-- Color when checked -->
        </shape>
    </item>
    <!-- Default (unchecked) state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Background color when unchecked -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color when unchecked -->
        </shape>
    </item>
</selector>
